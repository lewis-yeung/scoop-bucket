    },
    "architecture": {
        "64bit": {
            "url": [
                "https://www.python.org/ftp/python/3.11.2/python-3.11.2-amd64.exe#/setup.exe",
                "https://ghproxy.com/https://raw.githubusercontent.com/lewis-yeung/scoop-bucket/main/scripts/python/pyreg.py"
            ],
            "hash": [
                "md5:4331ca54d9eacdbe6e97d6ea63526e57",
                "17d6df60c234df77f1925f4e428ffb2aa68c09322c043b4191e5c87c24c86857"
            ]
        },
        "32bit": {
            "url": [
                "https://www.python.org/ftp/python/3.11.2/python-3.11.2.exe#/setup.exe",
                "https://ghproxy.com/https://raw.githubusercontent.com/lewis-yeung/scoop-bucket/main/scripts/python/pyreg.py"
            ],
            "hash": [
                "md5:2123016702bbb45688baedc3695852f4",
                "17d6df60c234df77f1925f4e428ffb2aa68c09322c043b4191e5c87c24c86857"
            ]
        }
    },
    "depends": "gsudo",
    "installer": {
        "script": [
            "Expand-DarkArchive \"$dir\\setup.exe\" \"$dir\\_tmp\"",
            "@('path.msi', 'pip.msi') | ForEach-Object { Remove-Item \"$dir\\_tmp\\AttachedContainer\\$_\" }",
            "(Get-ChildItem \"$dir\\_tmp\\AttachedContainer\\*.msi\").FullName | ForEach-Object { Expand-MsiArchive $_ \"$dir\" }",
            "Remove-Item \"$dir\\_tmp\", \"$dir\\setup.exe\" -Force -Recurse",
            "Invoke-ExternalCommand \"gsudo.exe\" -Args @(\"$dir\\python.exe\", \"$dir\\pyreg.py\", '-w') | Out-Null"
        ]
    },
    "uninstaller": {
        "script": [
            "if ($cmd -eq 'uninstall') {",
            "  remove_from_path \"$env:USERPROFILE\\AppData\\Roaming\\Python\\Python$($version -replace '([\\d]+)\\.([\\d]+)\\.[\\d]+', '$1$2')\\Scripts\" $global",
            "  Invoke-ExternalCommand \"gsudo.exe\" -Args @(\"$dir\\python.exe\", \"$dir\\pyreg.py\", '-r') | Out-Null",
            "}"
        ]
    },
    "post_install": [
        "add_first_in_path \"$env:USERPROFILE\\AppData\\Roaming\\Python\\Python$($version -replace '([\\d]+)\\.([\\d]+)\\.[\\d]+', '$1$2')\\Scripts\" $global",
        "& \"$dir\\python.exe\" -E -s -m ensurepip -U --default-pip | Out-Null"
    ],
    "bin": [
        [
            "python.exe",
            "python3"
        ]
    ],
    "env_add_path": [
        "Scripts",
        "."
    ],
    "persist": [
        "Scripts",
        "Lib\\site-packages"
    ],
    "checkver": {
        "url": "https://www.python.org/downloads/windows/",
        "regex": "Latest Python 3 Release - Python ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://www.python.org/ftp/python/$version/python-$version-amd64.exe#/setup.exe"
            },
            "32bit": {
                "url": "https://www.python.org/ftp/python/$version/python-$version.exe#/setup.exe"
            }
        },
        "hash": {
            "url": "https://www.python.org/downloads/release/python-$cleanVersion/",
            "regex": "(?sm)$basename.*?$md5"
        }
    }
}
