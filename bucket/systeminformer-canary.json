{
    "$schema": "https://raw.githubusercontent.com/ScoopInstaller/Scoop/master/schema.json",
    "version": "3.0.7579",
    "description": "A free, powerful, multi-purpose tool that helps you monitor system resources, debug software and detect malware.",
    "homepage": "https://systeminformer.sourceforge.io/canary.php",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/winsiderss/systeminformer/blob/master/LICENSE.txt"
    },
    "url": "https://github.com/winsiderss/si-builds/releases/download/3.0.7579/systeminformer-3.0.7579-canary-bin.zip",
    "hash": "d5d3a84099d17ea87be8ffa2c3ba0fe8268f6df324057344e9d94825b1e1b2d0",
    "architecture": {
        "64bit": {
            "extract_dir": "amd64"
        },
        "32bit": {
            "extract_dir": "i386"
        },
        "arm64": {
            "extract_dir": "arm64"
        }
    },
    "post_install": [
        "Remove-Item \"$dir\\SystemInformer.exe.settings.xml\" -Force -ErrorAction SilentlyContinue",
        "create_startmenu_shortcuts $manifest \"$original_dir\" $global $architecture *>$null"
    ],
    "shortcuts": [
        [
            "SystemInformer.exe",
            "System Informer"
        ]
    ],
    "checkver": {
        "regex": "systeminformer-([\\d.]+)"
    },
    "autoupdate": {
        "url": "https://github.com/winsiderss/si-builds/releases/download/$version/systeminformer-$version-canary-bin.zip",
        "hash": {
            "url": "https://systeminformer.sourceforge.io/canary.php",
            "regex": "(?sm)Binaries [^\\(]*?\\(SHA2\\).*?>$sha256<"
        }
    }
}
