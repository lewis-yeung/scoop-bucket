{
    "$schema": "https://raw.githubusercontent.com/ScoopInstaller/Scoop/master/schema.json",
    "version": "nightly",
    "description": "A professional office management tool for enterprises, developed by Tencent.",
    "homepage": "https://work.weixin.qq.com/",
    "license": {
        "identifier": "Proprietary",
        "url": "https://work.weixin.qq.com/nl/eula"
    },
    "url": "https://work.weixin.qq.com/wework_admin/commdownload?platform=win&from=wwindex#/dl.7z",
    "installer": {
        "script": [
            "@(",
            "  'FlutterPlugins'",
            "  'WeMeet'",
            ") | ForEach-Object {",
            "  $versionDir = Get-ChildItem \"$dir/*.*.*.*\"",
            "  if (Test-Path \"$versionDir/$_.zip\") {",
            "    Expand-ZipArchive \"$versionDir/$_.zip\" \"$versionDir/$_\"",
            "  }",
            "}",
            "Remove-Item @(",
            "  \"$dir/`$*\"",
            "  \"$dir/Uninstall*\"",
            ") -Force -Recurse -ErrorAction SilentlyContinue"
        ]
    },
    "shortcuts": [
        [
            "WXWork.exe",
            "WeCom"
        ]
    ]
}
