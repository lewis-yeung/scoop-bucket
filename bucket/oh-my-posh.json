        "- Sample themes can be found in `$dir\\themes`."
    ],
    "architecture": {
        "64bit": {
            "url": [
                "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v11.3.1/posh-windows-amd64.exe",
                "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v11.3.1/themes.zip"
            ],
            "hash": [
                "d7bbbf3e29be3a328539fd7b5fef17c32561ad6197810fd7e368523df228322b",
                "d7805d68563c5c5f3d1b5e996298c9c394954695f12d37aa0f46ac69e297f671"
            ]
        },
        "32bit": {
            "url": [
                "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v11.3.1/posh-windows-386.exe",
                "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v11.3.1/themes.zip"
            ],
            "hash": [
                "71b65500ac8fbb032ca31b96177460474e00af0c40633d6a441018a763d09ba5",
                "d7805d68563c5c5f3d1b5e996298c9c394954695f12d37aa0f46ac69e297f671"
            ]
        }
    },
    "extract_to": "themes",
    "installer": {
        "script": [
            "New-Item -ItemType Directory -Path \"$dir\\bin\" -Force | Out-Null",
            "$(if ($architecture -eq '64bit') {",
            "  \"posh-windows-amd64.exe\"",
            "} else {",
            "  \"posh-windows-386.exe\"",
            "}) | ForEach-Object { Move-Item -Path \"$dir\\$_\" -Destination \"$dir\\bin\\oh-my-posh.exe\" -Force }"
        ]
    },
    "env_add_path": "bin",
    "env_set": {
        "POSH_THEMES_PATH": "$dir\\themes"
    },
    "checkver": {
        "github": "https://github.com/JanDeDobbeleer/oh-my-posh"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": [
                    "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v$version/posh-windows-amd64.exe",
                    "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v$version/themes.zip"
                ]
            },
            "32bit": {
                "url": [
                    "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v$version/posh-windows-386.exe",
                    "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v$version/themes.zip"
                ]
            }
        },
        "hash": {
            "url": "$url.sha256"
        }
    }
}
