    ],
    "architecture": {
        "64bit": {
            "url": [
                "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v9.3.1/posh-windows-amd64.exe",
                "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v9.3.1/themes.zip"
            ],
            "hash": [
                "1e6ab5a1dacc1a36086bb8dd8780ddaea296731a35ee2b3bb4f88a21a672791e",
                "7d4376a9feae2c36d3658008f65c2c2f62dc8ba2cf2679ab6eecfeccdff0dfa5"
            ]
        },
        "32bit": {
            "url": [
