        },
        "32bit": {
            "url": [
                "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v10.3.0/posh-windows-386.exe",
                "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v10.3.0/themes.zip"
            ],
            "hash": [
                "b37c14fdb54275c03500c305111659a9f9cb603ec2fe70d43c6f93ada6071b20",
