    "post_install": [
        "Write-Host '- Thanks for installing Oh My Posh.'",
        "Write-Host '- Have a look at https://ohmyposh.dev for detailed instructions for your shell.'"
    ],
    "checkver": {
        "github": "https://github.com/JanDeDobbeleer/oh-my-posh"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v$version/posh-windows-amd64.7z",
                "hash": {
                    "url": "$url.sha256"
                }
            }
        }
    }
}
