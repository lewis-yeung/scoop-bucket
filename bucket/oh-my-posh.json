    "version": "7.90.1",
    "description": "A prompt theme engine for any shell.",
    "homepage": "https://ohmyposh.dev",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/JanDeDobbeleer/oh-my-posh/blob/main/COPYING"
    },
    "architecture": {
        "64bit": {
            "url": "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v7.90.1/posh-windows-amd64.7z",
            "hash": "442784d10b89a574690f911385790f0d8b34fea954e1b0716d6ec81e5e36b8d3"
        }
    },
    "env_add_path": "bin",
    "env_set": {
