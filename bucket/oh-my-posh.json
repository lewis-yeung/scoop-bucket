        },
        "32bit": {
            "url": [
                "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v9.0.0/posh-windows-386.exe",
                "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v9.0.0/themes.zip"
            ],
            "hash": [
                "4d9362db95e3fa6065f0ea33e3bd905383cacb2c67401f53e4ca1323d30bc906",
