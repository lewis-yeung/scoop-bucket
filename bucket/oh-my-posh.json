{
    "$schema": "https://ghproxy.com/https://raw.githubusercontent.com/ScoopInstaller/Scoop/master/schema.json",
    "version": "7.85.2",
    "description": "A prompt theme engine for any shell.",
    "homepage": "https://ohmyposh.dev",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/JanDeDobbeleer/oh-my-posh/blob/main/COPYING"
    },
    "architecture": {
        "64bit": {
            "url": "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v7.85.2/posh-windows-amd64.7z",
            "hash": "e412763c54f1b790388329f8b525dd2b5ced3745d3d22e0a7b0759bb81478114"
        }
    },
    "env_add_path": "bin",
    "env_set": {
        "POSH_THEMES_PATH": "$dir\\themes"
