        "- Have a look at https://ohmyposh.dev/docs/installation/customize for detailed instructions for your shell.",
        "- Sample themes can be found in `$dir\\themes`."
    ],
    "architecture": {
        "64bit": {
            "url": [
                "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v9.2.0/posh-windows-amd64.exe",
                "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v9.2.0/themes.zip"
            ],
            "hash": [
                "99cb935ecf9cafea1bff0ab1e032faaaabd4e3e2f6ac3e8b8b0ff2f7030965b4",
                "9fb1e12be8a670787ef831b02ff030a77ef738bcde8620563eb38a5828b62b4a"
            ]
        },
        "32bit": {
            "url": [
                "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v9.2.0/posh-windows-386.exe",
                "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v9.2.0/themes.zip"
            ],
            "hash": [
                "79097b4accd3e1ce3668af3b8814cef58d400e5760ab169b87f76033fe03212a",
                "9fb1e12be8a670787ef831b02ff030a77ef738bcde8620563eb38a5828b62b4a"
            ]
        }
    },
    "extract_to": "themes",
    "installer": {
        "script": [
            "New-Item -ItemType Directory -Path \"$dir\\bin\" -Force | Out-Null",
            "$(if ($architecture -eq '64bit') {",
            "  \"posh-windows-amd64.exe\"",
            "} else {",
            "  \"posh-windows-386.exe\"",
            "}) | ForEach-Object { Move-Item -Path \"$dir\\$_\" -Destination \"$dir\\bin\\oh-my-posh.exe\" -Force }"
        ]
    },
    "env_add_path": "bin",
    "env_set": {
        "POSH_THEMES_PATH": "$dir\\themes"
    },
    "checkver": {
        "github": "https://github.com/JanDeDobbeleer/oh-my-posh"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": [
                    "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v$version/posh-windows-amd64.exe",
                    "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v$version/themes.zip"
                ]
            },
            "32bit": {
                "url": [
                    "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v$version/posh-windows-386.exe",
                    "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v$version/themes.zip"
                ]
            }
        },
        "hash": {
            "url": "$url.sha256"
        }
    }
}
