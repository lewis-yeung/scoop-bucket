    ],
    "architecture": {
        "64bit": {
            "url": [
                "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v8.25.0/posh-windows-amd64.exe",
                "https://ghproxy.com/https://github.com/JanDeDobbeleer/oh-my-posh/releases/download/v8.25.0/themes.zip"
            ],
            "hash": [
                "8a3e4a01dfa3494d7213a19f57be93447ed186ac3d6c1220010a4ad5167421bb",
