    "architecture": {
        "64bit": {
            "shortcuts": [
                [
                    "DiskMark64.exe",
                    "CrystalDiskMark"
                ]
            ]
        },
        "32bit": {
            "shortcuts": [
                [
                    "DiskMark32.exe",
                    "CrystalDiskMark"
                ]
