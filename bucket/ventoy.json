{
    "$schema": "https://raw.githubusercontent.com/ScoopInstaller/Scoop/master/schema.json",
    "version": "1.1.07",
    "description": "An open source tool to create bootable USB drives for various image files.",
    "homepage": "https://www.ventoy.net/",
    "license": {
        "identifier": "GPL-3.0-or-later",
        "url": "https://github.com/ventoy/Ventoy/blob/master/COPYING"
    },
    "url": "https://github.com/ventoy/Ventoy/releases/download/v1.1.07/ventoy-1.1.07-windows.zip",
    "hash": "3e7a8db199c7e791e341e6d388d078bfc6b7a77c6f10282edf9c7b82f84f3ad4",
    "extract_dir": "ventoy-1.1.07",
    "pre_install": [
        "@('log.txt', 'Ventoy2Disk.ini', 'VentoyPlugson.log', 'VentoyVlnk.log') | ForEach-Object {",
        "  if (!(Test-Path \"$persist_dir\\$_\")) { New-Item \"$dir\\$_\" | Out-Null }",
        "}"
    ],
    "shortcuts": [
        [
            "Ventoy2Disk.exe",
            "Ventoy2Disk"
        ],
        [
            "VentoyPlugson.exe",
            "VentoyPlugson"
        ],
        [
            "VentoyVlnk.exe",
            "VentoyVlnk",
            "-s"
        ]
    ],
    "persist": [
        "log.txt",
        "Ventoy2Disk.ini",
        "VentoyPlugson.log",
        "VentoyVlnk.log"
    ],
    "checkver": {
        "github": "https://github.com/ventoy/Ventoy"
    },
    "autoupdate": {
        "url": "https://github.com/ventoy/Ventoy/releases/download/v$version/ventoy-$version-windows.zip",
        "hash": {
            "url": "$baseurl/sha256.txt"
        },
        "extract_dir": "ventoy-$version"
    }
}
