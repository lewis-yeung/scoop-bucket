{
    "$schema": "https://ghproxy.com/https://raw.githubusercontent.com/ScoopInstaller/Scoop/master/schema.json",
    "version": "103.0.1",
    "description": "Popular open source web browser.",
    "homepage": "https://www.mozilla.org/firefox/",
    "license": {
        "identifier": "MPL-2.0",
        "url": "https://www.mozilla.org/en-US/MPL/2.0/"
    },
    "notes": "For details about switching Firefox profiles, refer to https://support.mozilla.org/en-US/kb/profile-manager-create-remove-switch-firefox-profiles",
    "architecture": {
        "64bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/103.0.1/win64/en-US/Firefox%20Setup%20103.0.1.exe#/dl.7z",
            "hash": "sha512:957b36261472247bd3062c2cf26fbbe81cc89c898a3837d2d4292d93e6d0ca6f2ea090335ed7eb7643d2499e1c19835d36e83c64ab79f178a6feca75213705f5"
        },
        "32bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/103.0.1/win32/en-US/Firefox%20Setup%20103.0.1.exe#/dl.7z",
            "hash": "sha512:d7db4d46f30d39fdcde39bec305596160b783b7a2c496aad07b2a398ce58b4ecf1c09d80be5bebe72a7d90e59b54284ef334ac91d9bf6066192c44d517eaeb44"
        }
    },
    "extract_dir": "core",
    "shortcuts": [
        [
            "firefox.exe",
            "Firefox"
        ]
    ],
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\defaults\\pref\\channel-prefs.js\")) {",
        "  Set-Content -Encoding Ascii -Path \"$dir\\defaults\\pref\\channel-prefs.js\" -Value 'pref(\"app.update.channel\", \"default\");'",
        "  Write-Host -ForegroundColor Green \"The auto-update will be disabled. You can change the update channel in '$persist_dir\\defaults\\pref\\channel-prefs.js'.\"",
        "}"
    ],
    "persist": [
        "defaults\\pref\\channel-prefs.js",
        "distribution",
        "profile"
    ],
    "checkver": {
        "url": "https://www.mozilla.org/en-US/firefox/notes/",
        "regex": "<div class=\"c-release-version\">([\\d.]+)</div>"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win64/en-US/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win64/en-US/$basename"
                }
            },
            "32bit": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win32/en-US/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win32/en-US/$basename"
                }
            }
        }
    }
}
