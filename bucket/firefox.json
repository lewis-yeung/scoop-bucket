{
    "$schema": "https://raw.githubusercontent.com/ScoopInstaller/Scoop/master/schema.json",
    "version": "140.0.4",
    "description": "Popular open source web browser.",
    "homepage": "https://www.mozilla.org/firefox/",
    "license": {
        "identifier": "MPL-2.0",
        "url": "https://www.mozilla.org/en-US/MPL/2.0/"
    },
    "notes": "For details about switching Firefox profiles, refer to https://support.mozilla.org/en-US/kb/profile-manager-create-remove-switch-firefox-profiles",
    "architecture": {
        "64bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/140.0.4/win64/en-US/Firefox%20Setup%20140.0.4.exe#/dl.7z",
            "hash": "sha512:2bb75bb58ab8a3a7321ad8bd7818167bc9ca410fa770ba7b402d25f967f477fb5e8518f807df0c8f1d74811ff8a30b2a96f4f4ea41c06a019ba2e6b777638119"
        },
        "32bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/140.0.4/win32/en-US/Firefox%20Setup%20140.0.4.exe#/dl.7z",
            "hash": "sha512:83536ef32d0b597b027ac8d7dee65195036e262ac94980f4f08c5b1fcc816fef186770039c6a335c93c544c0b57a0e0c301fb9b0bcc1d14a4abd04f4d047a644"
        }
    },
    "extract_dir": "core",
    "shortcuts": [
        [
            "firefox.exe",
            "Firefox"
        ]
    ],
    "pre_install": [
        "'defaults\\pref\\channel-prefs.js' | ForEach-Object {",
        "  if (!(Test-Path \"$persist_dir\\$_\")) {",
        "    Write-Host -ForegroundColor Green \"Disabling the auto-update...\"",
        "    Set-Content -Encoding Ascii -Path \"$dir\\$_\" -Value 'pref(\"app.update.channel\", \"default\");'",
        "  }",
        "}"
    ],
    "persist": [
        "defaults\\pref\\channel-prefs.js",
        "distribution"
    ],
    "checkver": {
        "url": "https://www.mozilla.org/en-US/firefox/notes/",
        "regex": "class=\"c-release-version\">([\\d.]+)</"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win64/en-US/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win64/en-US/$basename"
                }
            },
            "32bit": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win32/en-US/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win32/en-US/$basename"
                }
            }
        }
    }
}
